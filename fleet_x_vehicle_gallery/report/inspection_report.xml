<?xml version="1.0" encoding="utf-8"?>
<openerp>


    <report
            id="car_inspection_report"
            model="fleet.vehicle.gallery"
            string="Hoja de Inspección"
            report_type="qweb-pdf"
            name="fleet_x_vehicle_gallery.inspection_report"
            file="fleet_x_vehicle_gallery.inspection_report"
    />


    <template id="inspection_report">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.external_layout">
                    <div class="page">
                        <h4><div t-field="o.doc_type"/></h4>
                        <div style="border: double;padding: 10px;">
                            <div><strong>Sirvase entregar vehiculo descrito abajo a.: </strong><span t-field="o.to_partner_id"/></div>
                            <div><strong>Para recibir de.: </strong><span t-field="o.from_partner_id"/></div>
                            <div>
                                <span t-if="o.to_partner_id.street"><strong>Dirección.: </strong><span t-field="o.to_partner_id.street"/></span>
                                <span t-if="o.to_partner_id.phone"> <strong>Telefono.: </strong><span t-field="o.to_partner_id.phone"/></span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


</openerp>